<!--component/posterIndex.wxml-->
<view class="commodity_screen2" style='opacity: 0.8;' wx:if="{{showpost}}" catchtouchmove="return"></view>

<view class='poste_box' catchtouchmove="return"  hidden='{{!showpost}}' bindtap='closePoste'>

  <view class='poste_content' bindlongpress='saveShareImg' id='canvas-container'catchtouchmove="return">
    <canvas canvas-id="myCanvas" style="width:100%;height:100%;" />
  </view>
  
  <!-- 退出 -->
  <view class='close-poste' catchtouchmove="return">
    <button open-type="share" class='btn'>分享好友</button>
    <button class='btn' bindtap='saveShareImg' >保存到本地</button>
  </view>
</view>
