.commodity_screen2 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.685);
  overflow: hidden;
  z-index: 9999;
  color: #fff;
}

 
/* 海报 */

.poste_box {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 9999;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  overflow: hidden;
}

.poste_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  width: 80%;
  height: auto;
  margin: auto;
  overflow: hidden;
  position: fixed;
  top: 70rpx;
  z-index: 9999;
  border-radius: 0rpx;
}


.close-poste {
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  bottom: 6%;
  z-index: 9999;
  text-align: center;
  flex-direction: row;
  justify-content: space-around;
}



.btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-left: 50rpx;
  padding-right: 50rpx;
  width: 320rpx;
  height: 80rpx;
  background-color: #ec7803;
  color: white;
  border-radius: 40rpx;
}
