/* pages/points/convert.wxss */
.section{
  width: 100%;
  min-height: 285rpx;
  background: #fff;
  margin-top: 18rpx;
}
.header{
  width: 100%;
  height: 72rpx;
  padding: 0 34rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header .time-wrap{
  display: flex;
}
.header .time-wrap .time{
  margin-left: 10rpx;
}
.header .status{
  color: #FF734B;
}
.content{
  display: flex;
  padding: 32rpx 34rpx;
}
.content .goods-img{
  width: 150rpx;
  height: 150rpx;
  /* border: 1px solid red; */
}
.content .desc{
  width: calc(100vw - 241rpx);
  margin-left: 25rpx;
  margin-top: 2rpx;
}
.content .l1{
  display: flex;
}
.content .desc .goods-name{
  color: #222;
  margin-right: 30rpx;
}
.content .desc .goods-num{
  font-size: 24rpx;
  vertical-align: bottom;
}
.content .l2{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 9rpx;
  margin-bottom: 8rpx;
}
.content .goods-type{
  width: 120rpx;
  border-right: 1px solid #ddd;
}
.content .amount-wrap{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.content .amount-wrap image{
  width: 20rpx;
  height: 24rpx;
  margin-left: 18rpx;
  margin-right: 9rpx;
}
.content .l3 .receive-btn{
  float: right;
  width: 115rpx; 
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: #28B973;
}
.content .l3 .detail-btn{
  float: right;
  width: 115rpx; 
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #222;
  border: 1px solid #D8D8D8;
}

/* 蒙版 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.4);
}
.pop{
  width: 686rpx;
  min-height: 744rpx;
  background: #fff;
  border-radius: 18rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.pop .head{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
}
.pop .head .pop-headline{
  font-size: 36rpx;
  color: #222; 
  float: left;
  margin-left: 269rpx; 
}
.pop .head .pop-status{
  font-size: 24rpx;
  color: #FF734B;
  float: right;
  margin-right: 30rpx;
}
.pop .ul{
  padding: 0 32rpx; 
}
.pop .li{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #F2F2F2;
}
.pop .li .first-icon{
  float: left;
  width: 36rpx;
  height: 36rpx;
  margin-top: 26rpx;
}
.pop .li .tit{
  float: left;
  font-size: 24rpx;
  margin-left: 7rpx;
  margin-right: 24rpx;
}
.pop .li .tit2{
  float: left;
  color: #222;
}
.pop .li .more-arrow{
  float: right;
  margin-top: 28rpx;
}
.pop .li .tel2-icon{
  float: right;
  width: 54rpx;
  height: 54rpx;
  margin-top: 17rpx;
}
.pop .main{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 90rpx 150rpx 60rpx;
}
.pop .main .title{
  color: #666;
}
.pop .main .title text{
  color: #C9C9C9;
}
.code{
  width: 386rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #28B973;
  background: #F2F2F2;
  border-radius: 36rpx;
  margin-top: 26rpx;
  margin-bottom: 110rpx;
}
.code-disabled{
  width: 386rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  background: #F2F2F2;
  border-radius: 36rpx;
  margin-top: 26rpx;
  margin-bottom: 110rpx;
}
.pop .main .prompt{
  font-size: 24rpx;
  text-align: center;
}
.pop .cancel-btn{
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  right: -27rpx;
  top: -27rpx;
}
