/* pages/match/vote/vote.wxss */

.topscrollview {
  display: flex;
  display: -webkit-flex;
  white-space: nowrap;
  width: 100%;
  background-color: white;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.itemstyle {
  width: 140rpx;
  height: 130rpx;
  padding-top: 30rpx;
  display: inline-block;
  padding-bottom: 20rpx;
  vertical-align: top;
}


.itemstyle .item1 {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.itemstyle .item1active {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #ee8222;
  border-radius: 17rpx;
  height: 34rpx;
  justify-content: center;
  align-items: center;
}

.itemstyle .label1 {
  font-weight: bold;
  color: #333;
  font-size: 34rpx;
}

.itemstyle .label1active {
  color: #ee8222;
  font-weight: bold;
  font-size: 34rpx;
}

.itemstyle .label2 {
  color: #666;
  font-size: 20rpx;
}

.itemstyle .label2active {
  color: #fff;
  font-size: 20rpx;
}

.lstview {
  background-color: white;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.containview {
  display: flex;
  flex-direction: column;
  display: -webkit-flex;
  width: 100%;
  margin-bottom: 10rpx;
  height: auto;
}

.voteNumView {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ee8222;
  margin-top: 20rpx;
  min-width: 80rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border-top-right-radius: 17rpx;
  border-bottom-right-radius: 17rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
  position: absolute;
  z-index: 99;
}

.voteNumTxt {
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  text-align: center;
}

.videoview {
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
}

.txtview {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}

.txtview-left {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  width: 600rpx;
}

.txtview-right {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item-tp-img{ 
  width: 70rpx;
}

.item-name-txt {
  font-weight: bold;
  color: #222;
  font-size: 28rpx;
}

.item-des-txt {
  color: #666;
  font-size: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 40rpx;
}

.searchview {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: white;
}

.inputview {
  width: 100%;
  height: 60rpx;
  margin-right: 20rpx;
  border: 1px solid #ee8222;
  border-radius: 30rpx;
  padding-left: 30rpx;
}

.search-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #ee8222;
}

.search-btn text {
  color: white;
  font-size: 24rpx;
}