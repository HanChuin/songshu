.flex {
  display: flex;

}
.taR{
  text-align: right;
}
.taL{
  text-align: left;
}
.bgWhite {
  background: #fff;
}
.name{
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  border-top: 1px solid transparent;
  margin-top: 12rpx;
}

.line{
  width: 100%;
  height: 1px;
  background: #e6e6e6;
}

.mob{
  height: 70rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
}
.pic,.sec {
  margin-top: 12rpx;
}
#pic {
  width: 100%;
  padding-bottom: 1rpx;
}
.picContent {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.title {
  color: #000;
  font-size: 32rpx;
  letter-spacing: 25;
}
.sec {
  border-bottom: 1px solid transparent;
}
.sec,.pic {
  padding: 22rpx 0 0 32rpx;
}
.addPics{
  height: 120rpx;
  width: 120rpx;
  overflow: hidden;
  margin: 24rpx 10rpx;
  position: relative;
}
.addPics image {
  width: 100%;
}
.addPics .closePicBox {
  width: 40rpx;
  height: 40rpx;
  background: rgba(235, 229, 229, 0.2);
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addPics .closePicBox .closePic {
  width: 30rpx;
}

.pic .content {
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  background: #e1e1e1;
  margin: 24rpx 0;
  align-items: center;
  justify-content: center;
}
.pic .content .image {
  position: relative;
  width: 56rpx;
  height: 56rpx;
}
.pic .content .image .rowLine{
  position: absolute;
  top: 50%;
  left: 0;
  width: 56rpx;
  height: 1px;
  background: #a6a6a6;
}
.pic .content .image .colLine{
  position: absolute;
  top: 0;
  left: 50%;
  height: 56rpx;
  width: 1px;
  background: #a6a6a6;
}
.pic .content text {
  color: #919191;
  font-size: 18rpx;
  letter-spacing: 25;
  margin-top: 10rpx;
}

.sec textarea{
  box-sizing: border-box;
  width: 684rpx;
  height: 326rpx;
  background: #eee;
  border-radius: 15rpx;
  padding: 26rpx;
  margin: 16rpx 0 70rpx;
}

.secPlaceholder {
  color: #ACACAC;
  font-size: 24rpx;
  letter-spacing: 25;
}

.submit {
  width: 274rpx;
  height: 68rpx;
  background: #FF982A;
  color: #fff;
  font-family: PingFang-SC-Regular;
  font-size: 36rpx;
  letter-spacing: 25;
  border-radius: 15rpx;
  text-align: center;
  margin: 40rpx auto;
  line-height: 68rpx;

}
