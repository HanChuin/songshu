/* pages/votenroll/votenroll.wxss */

.box {
  background: #fff;
  font-family: SimHei;
}

/* 顶部活动图片和说明 */

.topPicAndExplain {
  width: 750rpx;
  height: auto;
  /* border: 1px solid red; */
  background: #fff;
}

.topPic {
  width: 100%;
  height: 100%;
}

.topExplain {
  position: fixed;
  z-index: 999;
  top: 300rpx;
  right: 0;
  height: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: #ffa229;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  color: #fefefe;
  text-align: center;
  font-size: 24rpx;
  line-height: 42rpx;
}

/* 标题 */

.votenrollTitle {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  text-align: center;
  margin: 25rpx auto 16rpx;
}

/* 投票倒计时 */

.voteCountDown {
  width: 702rpx;
  height: 148rpx;
  background: rgba(231, 231, 231, 0.37);
  border-radius: 15rpx;
  margin: 20rpx auto;
  padding-top: 24rpx;
}

.voteCountDownTitle {
  text-align: center;
  color: #ffb972;
  font-size: 32rpx;
}

.voteCountDownTime {
  font-family: PingFang-SC-ExtraLight;
  font-size: 32rpx;
  font-weight: 200;
  letter-spacing: 75;
  margin-top: 15rpx;
  text-align: center;
}

.voteCountDownTime text {
  font-size: 48rpx;
  font-weight: 200;
  color: #ffa229;
  margin-left: 30rpx;
}

.voteCountDownTime:first-child {
  margin-left: 0;
}

/* 统计栏 */

.voteStatistics {
  width: 80%;
  margin: 17rpx auto;
  height: 88rpx;
}

.voteStatistics > view {
  float: left;
  text-align: center;
  width: 33.33%;
  font-size: 28rpx;
  font-family: PingFang-SC-ExtraLight;
  font-weight: 200;
  color: #000;
}

.voteStatistics > view:nth-child(2) {
  border-left: 1px solid #626262;
  border-right: 1px solid #626262;
}

.voteStatistics > view >view {
  margin-top: 15rpx;
}

/* 搜索栏 */

.voteSearch {
  clear: both;
  width: 90%;
  margin: 10rpx auto;
}

.voteInput {
  display: inline-block;
  box-sizing: border-box;
  width: 510rpx;
  min-height: 44rpx;
  height: 44rpx;
  border-radius: 24rpx;
  border: 1px solid #ff982a;
  padding: 0 20rpx;
  margin-right: 14rpx;
}

.voteSearch .voteSearchBtn {
  height: 44rpx;
  width: 130rpx;
  display: inline-block;
  border-radius: 20rpx;
  background: #ff982a;
  border: 1px solid #ff982a;
  line-height: 42rpx;
  text-align: center;
  font-family: SimHei;
  font-size: 28rpx;
  color: #fff;
  white-space: nowrap;
}

.voteSearchBtn:after {
  border: none;
}

/* 最新与排行 */

.tabIndex {
  color: #ffa229;
  font-family: SimHei;
  border-bottom: 6rpx #ffa229 solid;
}

.newAndAmong {
  background: #fff;
  padding-bottom: 88rpx;
}

.newAndAmong::after {
  content: '';
  height: 0;
  display: block;
  clear: both;
}

.newAndAmongTab {
  width: 50%;
  display: flex;
  margin: 20rpx auto;
  justify-content: space-around;
  font-family: SimHei;
  font-size: 36rpx;
  letter-spacing: 25;
  color: #000;
}

.roteNewItems {
  float: left;
  margin-left: 20rpx;
}

.roteNewItem {
  margin-bottom: 20rpx;
  width: 300rpx;
  margin: 0 20rpx 20rpx;
}

.roteNewItem image {
  width: 300rpx;
}

.rniNameAndTickets {
  display: flex;
  padding: 0 5rpx;
  height: 70rpx;
  background: #f5f5f5;
  justify-content: space-between;
  align-items: center;
}

.rniRoteBtn {
  height: 40rpx;
  width: 300rpx;
  background: #ffa229;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}

.rniName {
  color: #000;
  display: -webkit-box;
  width: 200rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rniTicket {
  color: #ffa229;
}

.roteAmongItem image {
  border-radius: 50%;
}

.roteAmongItem .amongTop3 image {
  margin-bottom: 10rpx;
}

.roteAmongItem .amongTop3 .voteListItem:first-child image {
  width: 152rpx;
  height: 152rpx;
}

.roteAmongItem .amongTop3 .voteListItem:nth-child(2) image {
  width: 174rpx;
  height: 174rpx;
}

.roteAmongItem .amongTop3 .voteListItem:nth-child(3) image {
  width: 152rpx;
  height: 152rpx;
}

.roteAmongItem .amongTop7 image {
  width: 44rpx;
  height: 44rpx;
}

.amongTop3 {
  display: flex;
  justify-content: space-around;
  margin-top: 100rpx;
}

.amongTop3 .voteListItem {
  display: flex;
  flex: 1;
  padding-left: 5rpx;
  padding-right: 5rpx;
  align-items: center;
  flex-direction: column-reverse;
}

.amongTop3 .voteListItem view {
  text-align: center;
  margin: 3rpx 0;
}

.amongTop3 .voteListItem view {
  font-family: SimHei;
  font-size: 24rpx;
  letter-spacing: 25;
}

.top3Num {
  color: #020202;
}

.top3Ticket {
  color: #ffae4e;
}

.top3IdAndName {
  color: #000;
  display: -webkit-box;
  font-size: 28rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.amongTop7 {
  margin: 30rpx 0 15rpx;
  align-items: center;
}

.amongTop7 .top7ListItem {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.top7Left {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 24rpx;
  flex: 1;
}

.top7Num {
  width: 50rpx;
  text-align: center;
}

.top7Id {
  margin-left: 30rpx;
}

.top7Name {
  margin-left: 20rpx;
}



.top7Num {
  margin: 0 40rpx;
}

/* .top7ListItem:last-child .top7Left .top7Num{
  margin-left: 32rpx;
} */

/* .top7ListItem:last-child .top7Left image {
  margin-left: -2rpx;
} */

.top7Right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #ffae4e;
  font-size: 24rpx;
  width: 140rpx;
  padding-right: 40rpx;
}

/* botBar */

.bottomBar {
  width: 100%;
  height: 88rpx;
  position: fixed;
  z-index: 666;
  bottom: 0;
  left: 0;
  font-family: PingFang-SC-Regular;
  font-size: 36rpx;
  letter-spacing: 25;
}

.bottomBar view {
  height: 100%;
  width: 50%;
  float: left;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottomBar view:first-child {
  background: #ff982a;
  color: #fff;
}

.bottomBar view:last-child {
  background: #fff;
  color: #ff982a;
}

.bottom-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 遮罩 */

.cover {
  position: fixed;
  z-index: 777;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.32);
}

/* 弹窗 */

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 200rpx;
  left: 30rpx;
  width: 692rpx;
  height: 846rpx;
  background: #fff;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 999;
  border-radius: 20rpx;
  overflow: auto;
  /* box-shadow: 0px 3px 3px 2px gainsboro; */
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.popup {
  padding: 28rpx 18rpx;
}

.popupTitle {
  color: #000;
  font-size: 28rpx;
  letter-spacing: 25;
  margin: 0 auto 56rpx;
  text-align: center;
}

.popupContent {
  display: flex;
  align-content: center;
  margin-bottom: 34rpx;
}

.contentLeft .img {
  width: 74rpx;
  height: 74rpx;
  background: #ffa229;
  border-radius: 50%;
  margin-right: 14rpx;
  align-items: center;
}

.contentRight {
  align-content: center;
}

.contentRight view {
  font-size: 28rpx;
  color: #000;
  line-height: 38rpx;
}

.popupItemA, .popupItemB, .popupItemO {
  margin-top: 36rpx;
}

.popup .itemTitle {
  color: #000;
  font-size: 28rpx;
  letter-spacing: 25;
}

.itemTitleItem {
  margin-left: 24rpx;
  color: #989898;
  font-size: 28rpx;
  letter-spacing: 25;
  line-height: 42rpx;
}

.popupItemO {
  margin-top: 140rpx;
}

.sharebtn {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-radius:0;
  align-items: center;
  outline: none;
  border: none;
  list-style: none;
}

.sharebtn::after {
  border: none;
}

.share {
  flex: 1;
  flex-direction: row;
  background-color: white;
  align-items: center;
}

.btn_hover {
  background-color: white;
}
