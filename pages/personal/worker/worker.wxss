/* 9宫格 */
.weui_bcb{
  width: 658rpx;
  height: 620rpx;
  background: #fff;
  box-shadow: 0 10rpx 48rpx rgba(5, 5, 5,0.3);
  margin: -100rpx auto 0;
  border-radius: 20rpx;
}
.weui-grids {
  position: relative;
  overflow: hidden;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  border-radius: 20rpx;
}

.weui-grid {
  position: relative ;
  float: left;
  padding: 20px 20px;
  width: 33.3333%;
  box-sizing: border-box;
}

.weui-gridBtn {
  position: relative ;
  float: left;
  padding: 0;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}


.weui-grid:before,.weui-gridBtn:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  display: flex;
  justify-content: center;
  bottom: 0;
  color: #D9D9D9;
  -webkit-transform-origin: 100% 0;
          transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
          transform: scaleX(0.5);
}
.weui-grid:after,.weui-gridBtn:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
          transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.weui-grid:active,.weui-gridBtn:active {
  background-color: #ECECEC;
}
.weui-gridBtn::after{
  border: 0;
}
.weui-grid__icon {
  display: flex;
  flex-direction: row;
  align-items: center; 
  justify-content: center;
  width: 50px;
  height: 50px;
  background-color: #ff734b;
  border-radius: 50%;
  margin: 0 auto;
}
.weui-grid__icon image {
  display: block;
  width: 50%;
  height: 50%;
}
.weui-grid__icon + .weui-grid__label {
  margin-top: 1px;
}
.weui-grid__label {
  display: block;
  text-align: center;
  /* font-weight: bold; */
  color: #6F6F6F;
  font-size: 11px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-gridBtn .weui-grid__label {
  /* padding: 0; */
  /* margin: 0; */
  height: 26rpx;
  line-height: 26rpx;
}


