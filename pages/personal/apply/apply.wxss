.activity .l4 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.activity .l4 .personNum {
  display: flex;
  align-items: center;
}

.activity .l4 .people-num {
  font-size: 23rpx;
  color: rgb(255, 94, 0);
}

.activity .l4 .people-score{
  font-size: 23rpx;
  color: rgb(255, 94, 0);
}

.activity .l4 .title{
 margin-left: 30rpx;
}

.activity .l4 .deadline {
  background-color: coral;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 120rpx;
  text-align: center;
}

.activity .l4 .applyfinsh {
  background-color: #c9c9c9;
  color: white;
  border-radius: 10rpx;
  height: 40rpx;
  width: 120rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  text-align: center;
}

.activity .l4 .day-num {
  font-size: 32rpx;
  color: #ff734b;
  margin-left: 15rpx;
  margin-right: 10rpx;
}

.activity .l4 .deadline-end {
  width: 121rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: #ccc;
  border-radius: 18rpx;
}
