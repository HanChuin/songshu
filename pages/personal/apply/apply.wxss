.nodataView {
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nodataView .nodataImg {
  width: 230rpx;
  height: 200rpx;
}
.nodataView .nodataText {
  color: #777;
  margin-top: 30rpx;
  font-size: 35rpx;
}

.itemview {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
}

.bigimg {
  width: 100%;
  height: auto;
  margin-bottom: 6rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.btnview {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.leftview {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.titlett {
  font-size: 26rpx;
  color: #4C4C4C;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.datetxtdd {
  font-size: 22rpx;
}

.addbtn {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 50rpx;
  padding-right: 50rpx;
  height: 60rpx;
  background-color: #ec7803;
  color: white;
  border-radius: 30rpx;
}
