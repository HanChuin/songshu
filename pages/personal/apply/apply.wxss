page {
  background-color: #fff;
}
.tabview {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  width: 94%;
  height: 60rpx;
  margin: 20rpx auto 5rpx;
}
.tabitem {
  width: 30%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
  transition: all 0.5s;
}
.tabitem-active {
  color: coral;
  border-bottom: 2px solid coral;
}
.list-icon {
  height: 53rpx;
  width: 53rpx;
}
.search-wrap {
  width: 92%;
  margin: 0 auto;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.searchBar {
  width: 85%;
  height: 90%;
  background-color: #eee;
  border-radius: 5rpx;
  padding-left: 20rpx;
}
.activity-wrap {
  width: 100%;
  background: #fff;
  margin-bottom: 74rpx;
}

.activity {
  width: 92%;
  display: flex;
  margin: 0 auto;
  padding: 31rpx 0 32rpx 0;
  /* border-bottom: 1px solid #eee; */
}

