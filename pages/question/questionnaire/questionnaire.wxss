/* pages/questionnaire/questionnaire.wxss */
page {
  background: #fff;
}
.head{
  position: relative;
}
.headerImg {
  width: 100%;
}
.title {
  position: absolute;
  top: 280rpx;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
}
form {
  display: block;
  box-sizing: border-box;
  /* margin: 0 40rpx; */
  /* display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center; */
}
.ques {
  margin: 0 40rpx;
}

.question-title {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  margin: 20rpx 0;
}

.answer-items {
  display: flex;
  width: 630rpx;
  height: 82rpx;
  border: 1px solid #dedede;
  border-radius: 15rpx;
  box-shadow: 0 0 42rpx rgba(9,9,9, .04);
  margin: 20rpx 0 40rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

textarea.answer-area{
  height: 60rpx;
  display: flex;
  width: 610rpx;
  border: 1px solid #dedede;
  border-radius: 15rpx;
  box-shadow: 0 0 42rpx rgba(9,9,9, .04);
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.answer-items-check{
  border: 1px solid #ef8c16;
}
.nextBtn {
  width: 100%;
  background: #ef8c16;
  color: #fff;
  border-radius: 0;
  margin-top: 10rpx;
}
.nextBtn::after {
  border: 0;
}