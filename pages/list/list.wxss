page {
  background-color: #f4f5f6;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tabview {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  width: 94%;
  height: 60rpx;
  margin: 20rpx auto 5rpx;
}

.tabitem {
  width: 30%;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
  transition: all 0.5s;
}

.tabitem-active {
  color: coral;
  border-bottom: 2px solid coral;
}

.list-icon {
  height: 53rpx;
  width: 53rpx;
}

.search {
  background-color: white;
  display: flex;
  justify-content: center;
}

.search-wrap {
  width: 92%;
  margin: 0 auto;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.searchBar {
  flex: 1;
  padding-left: 20rpx;
}

.activity {
  width: 92%;
  display: flex;
  margin: 0 auto;
  padding: 31rpx 0 32rpx 0;
  border-bottom: 1px solid #eee;
}

.activity .img {
  width: 180rpx;
  height: 150rpx;
  border-radius: 5rpx;
}

.activity-wrap {
  width: 100%;
}

.itemview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 10rpx;
  border-radius: 15rpx;
}

