/* pages/personal/profile/profile.wxss */
page {
  background-color: #fff;
}
.li{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 0 32rpx;
  font-size: 28rpx;
  color: #4c4c4c;
}
.richContent {
  width: 720rpx;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
  margin:15rpx;
}
.richContent .detailtitle {
  font-size: 35rpx;
  color: red;
  margin-top: 20rpx;
}


.addJoin {
  display: flex;
}
.addJoinImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.choiceAll {
  display: flex;
  margin-left: 30rpx;
}
.choiceAll-item {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  position: relative;
  align-items: center;
}
.del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.choice {
  width: 120rpx;
  height: 120rpx
}
.choiceHeadImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.addPerson {
  color: #000;
}

.notice {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.ul{
  width: 100%;
  color: #666;
  background: #fff;
}


 
.footer{
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 112rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}
.footer .btn{
  margin-left: 20rpx;
  width: 76%;
  height: 80rpx;
  border-radius: 40rpx;
  background: #ff902e;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0;
}
.txt {
  text-align: center;
  width: 250rpx;
  display: inline-block;
}


.rulesCircle {
  width: 40rpx;
  margin-right: 5rpx;
  height: 40rpx;
  border: 1px solid #dcdcdc;
  border-radius: 50%;
}

.choose {
  width: 100%;
  background: #fff;
  border-top: 1px #dcdcdc solid;
  position: fixed;
  bottom: 0;
  left: 0;
}
.choose>view {
  margin: 30rpx 50rpx;
}
.choose-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.choose-item-mess {
  display: flex;
  flex-direction: column;
}
.headImg {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
}
.add {
  z-index: 10;
}
.card_img {
 width: 30rpx;
 height: 30rpx;
 margin-left: 10rpx;
}