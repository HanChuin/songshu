/* pages/project/list/projectList.wxss */

/* //关注项目 */

page {
  /* background-color: #f5f5f5; */
  background-color: white;
}

.favstyle {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}

.fav-item {
  width: 100rpx;
  height: 140rpx;
  align-items: center;
  justify-content: center;
  display: inline-block;
  margin-right: 10px;
}

.fav-image {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fav-txt {
  margin-top: 5rpx;
  width: 110rpx;
  text-align: center;
  font-size: 18rpx;
}

.fav-img {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  border: 2px solid #f08200;
}

.fire-img-view {
  display: flex;
  flex-direction: column;
  width: 28rpx;
  height: 28rpx;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: red;
  z-index: 99;
  opacity: 1;
  margin-left: 20px;
  margin-top: 36px;
  position: absolute;
  border: 1px solid white;
}

.fire-img {
  width: 18rpx;
  height: 18rpx;
}

.swiper {
  background: white;
}

.animaltion {
  width: 100%;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
  background-color: red;
}

#aaa {
  width: 80%;
}

.animaltion.animaltion-active {
  width: 100%;
  transform: scale(1);
  background-color: yellow;
}



.shadow {
  width: 100%;
  height: 35px;
  z-index: 1;
  opacity: 0.5;
  display: flex;
  flex-direction: column;
  border-radius: 0 0 6px 6px;
  position: absolute;
  bottom: 0rpx;
  background: linear-gradient(to top, white, #696969);
}

.projectNew {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  flex-direction: row;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.projectTD {
  display: flex;
  flex-direction: column;
  width: 60%;
  height: 80rpx;
}

.projectAction {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 50rpx;
  padding-right: 50rpx;
  height: 60rpx;
  background-color: #ec7803;
  color: white;
  border-radius: 30rpx;
}

/* 更多活动 */

.likelist {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
}

.activitiesItem {
  height: 220px;
  background: white;
  margin: 20rpx;
  border-radius: 6px;
}

.activitiesImg {
  border-radius: 6px 6px 0 0;
  height: 160px;
}

.activitiesNew {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  margin: 20rpx;
}

.activitiesTD {
  display: flex;
  flex-direction: column;
}

.activitiesAction {
  width: 80px;
  height: 30px;
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ec7803;
}

.bottomstyle {
  height: 180rpx;
  width: 1px;
}

.box-style {
  background-color: white;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.box-title {
  width: 100%;
  display: flex;
  color: #4c4c4c;
  font-weight: bold;
}

.box-title image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
}

.descstyle {
  color: white;
  padding-left: 8rpx;
  padding-right: 8rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  background-color: #ec7803;
  border-radius: 8rpx;
}

.projecttitlestyle {
  font-weight: bold;
  color: black;
  font-size: 17px;
}

.descstyle2 {
  color: #ec7803;
  padding-left: 32rpx;
}

.tagsstyle {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.space {
  height: 40rpx;
  width: 1rpx;
}

.btnstyles {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  right: 0;
  width: 100%;
  height: 35px;
  bottom: 0;
  z-index: 99;
  padding-left: 0rpx;
  padding-right: 0rpx;
}

.itemstyle {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.itemstyle text {
  align-self: flex-end;
  font-size: 35rpx;
  color: white;
}

.itemstyle .favtext {
  align-self: flex-end;
  font-size: 28rpx;
  color: white;
}

.careImg {
  width: 75rpx;
  height: 75rpx;
}

.careqqImg {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.careqqImg2 {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}


.keystyle {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: white;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}


.keyitemstyle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ececec;
  height: 50rpx;
  font-size: 23rpx;
  border-radius: 25rpx;
  margin-right: 18rpx;
  min-width: 90rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.keyitemstyle.select {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ececec;
  height: 50rpx;
  font-size: 23rpx;
  border-radius: 25rpx;
  margin-right: 18rpx;
  min-width: 90rpx;
