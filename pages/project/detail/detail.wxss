page{
   background-color: #f6f6f6
}

.bannerstyle {
  width: 100%;
  height: auto;
}

.containstyle {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #f6f6f6;
  min-height: 400rpx;
  margin-top: -40rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.favstyle {
  width: 100%;
  height: 120rpx;
  display: flex;
  margin-top: -60rpx;
  flex-direction:row-reverse;
  align-items: center;
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.favicon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #ee8222;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.favimg {
  width: 80rpx;
  height: 80rpx;
}

.labelstyle {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.label2style {
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.skstyle {
  width: 10rpx;
  border-radius: 5rpx;
  height: 40rpx;
  background-color: #ee8222;
  margin-right: 20rpx;
}

.projecttxtstyle {
  font-weight: bold;
  color: #000;
  font-size: 38rpx;
}

.rightstyle {
  display: flex;
  flex: 1;
  flex-direction: row-reverse;
  font-size: 25rpx;
}

.rightstyle text {
  margin-right: 20rpx;
}

.descstyle {
  margin-top: 20rpx;
