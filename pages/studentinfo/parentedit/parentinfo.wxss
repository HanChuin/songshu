/* pages/personal/profile/profile.wxss */
page {
  background-color: #fff;
}
.avatar-wrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 170rpx;
  padding: 0 30rpx 0 32rpx;
  background: #fff;
  color: #666;
}
.avatar-wrap .fr{
  display: flex;
  align-items: center;
}
.avatar{
  width: 108rpx;
  height: 108rpx;
  margin-right: 19rpx;
  border-radius: 50%;
  /* border: 1px solid red; */
}

.cardimg {
  width: 180rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.ul{
  width: 100%;
  color: #666;
  background: #fff;
}
.ul .li{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 0 32rpx;
}

.li .ili{
  display: flex;
  flex-direction: row;
  align-items: center;
}

 
.hr{
  width: 718rpx;
  margin-left: 32rpx; 
}
 
 
.contact-person{
  padding: 0 20rpx;
  color: #666;
  width: 266rpx;
}
 
.footer{
  width: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer .btn{
  width: 80%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  background: #FF6801;
}

 .footer .delbtn {
  width: 80%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  color: #fff;
  background: #F00;
  margin-bottom: 20rpx;
 }
 
.schooltxt {
  text-align: left;
  width: 250rpx;
  display: inline-block;
}
.requirestyle {
  color: red;
}