.infoview {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.infoview .name {
  font-size: 36rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  color: #333;
}

.infoview .l2{
  display: flex;
  align-items: center;
  width: 92%;
  margin: 0 auto;
  padding: 20rpx 0;
  /* padding-right: 76rpx; */
}
.infoview .l2 .convert-num{
  color: #ff8100;
}
.infoview .l2 .l2content{
  flex: 1;
  height: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.infoview .l2 .fr{
  margin-left: 0;
}
.infoview .l2 .amount-wrap{
  display: flex;
  align-items: center;
}
.infoview .l2 image{
  width: 30rpx;
  height: 30rpx;
}
.infoview .l2 .amount{
  font-size: 28rpx;
  color: #ff8100;
}

/* 立即兑换按钮 */
.bottomBox {
  width: 100%;
  height: 100rpx;
  padding-bottom: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}


.bottomBox .bt{
  width: 80%;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  padding: 0;
  margin: 0;
  color: #fff;
  background: #ff8100;
}
.bottomBox .bt::after {
  border: 0;
}
