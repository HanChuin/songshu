/* pages/details/doing.wxss */

/* 活动详情-公共结构 */
/* @import "../details-template/details-template.wxss";
@import "../select/select.wxss"; */

.activity-wrap {
  width: 100%;
  background: #fff;
}

.activity {
  width: 100%;
  display: flex;
  padding: 31rpx 30rpx 32rpx 32rpx;
}

.activity .img {
  width: 180rpx;
  height: 180rpx;
}

.activity .intro {
  width: 484rpx;
  margin-left: 24rpx;
  font-size: 24rpx;
}

.activity .l1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #222;
}

.activity .l1 .distance {
  font-size: 24rpx;
  color: #999;
}

.activity .l2 {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.activity .l2 text {
  padding: 0 17rpx;
  line-height: 1;
}

.activity .l2 text:nth-of-type(1) {
  padding-left: 0rpx;
}

.activity .l2 text+text {
  border-left: 1rpx solid #ddd;
}

.activity .l3 {
  margin-top: 9rpx;
  margin-bottom: 15rpx;
  display: flex;
}

.activity .l3 view {
  padding-right: 17rpx;
  padding-left: 17rpx;
  border-right: 1px solid #ddd;
}

.activity .l3 view:first-child {
  padding-left: 0;
}

.activity .l3 view:last-child {
  border: none;
}

.activity .l4 {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}

.activity .l4 .people-num {
  font-size: 32rpx;
  color: #28b973;
  margin-left: 15rpx;
  margin-right: 33rpx;
}

.activity .l4 .deadline {
  display: flex;
  align-items: center;
}

.activity .l4 .day-num {
  font-size: 32rpx;
  color: #ff734b;
  margin-left: 15rpx;
  margin-right: 10rpx;
}

.activity .l4 .deadline-end {
  width: 121rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: #ccc;
  border-radius: 18rpx;
}

/* 活动详情-公共结构 */

.tab {
  margin: 1rpx 0;
  display: flex;
  background: #fff;
}

.tab view {
  width: 50%;
  text-align: center;
  line-height: 88rpx;
}

.tab view text {
  display: inline-block;
}

.tab view text.on {
  color: #28b973;
  border-bottom: 4rpx solid #28b973;
}

/* 评价列表 */

.score-list {
  background: #fff;
}

.avatar-list {
  width: 750rpx;
}

.score-list .item {
  display: flex;
  justify-content: flex-start;
  padding: 32rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.score-list .item .avatar {
  width: 72rpx;
  height: 72rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 17rpx;
}

.score-list .item .name {
  color: #222;
}

.score-list .item .date {
  padding: 6rpx 0 10rpx 0;
  color: #999;
}

.score-list .item .content {
  color: #666;
}

.oper-height {
  display: block;
  height: 84rpx;
}

.oper {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.join {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.oper button {
  flex: 1;
  padding: 3rpx;
  line-height: 84rpx;
  margin: 0 4rpx;
  font-size: 32rpx;
}

/* 签到弹窗 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
}

.pop {
  width: 686rpx;
  /* min-height: 600rpx; */
  background: #fff;
  border-radius: 18rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.pop .head {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #222;
  text-align: center;
}

.pop .ul {
  padding: 0 32rpx;
}

.pop .li {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #f2f2f2;
}

.pop .li .first-icon {
  float: left;
  width: 36rpx;
  height: 36rpx;
  margin-top: 26rpx;
}

.pop .li .tit {
  float: left;
  font-size: 24rpx;
  margin-left: 7rpx;
  margin-right: 24rpx;
}

.pop .li .tit2 {
  float: left;
  color: #222;
}

.pop .li .more-arrow {
  float: right;
  margin-top: 28rpx;
}

.pop .li .tel2-icon {
  float: right;
  width: 54rpx;
  height: 54rpx;
  margin-top: 17rpx;
}

.pop .main {
  width: 100%;
  height: 187rpx;
  line-height: 187rpx;
  font-size: 28rpx;
  color: #ff734b;
  text-align: center;
}

.pop .confirm-sign {
  width: 622rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  /* background:rgba(204,204,204,1);  */
  border-radius: 4rpx;
  display: block;
  margin: 10rpx auto 32rpx;
  border: none;
}

.sign-btn-disabled {
  background: rgba(204, 204, 204, 1);
}

.sign-btn-abled {
  background: #28b973;
}

.pop .cancel-btn {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  right: -27rpx;
  top: -27rpx;
}

.swiperWrapper {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.swiperBox {
  height: 100%;
}

.swiper-img {
  width: 100%;
  height: auto;
}

/*用来包裹所有的小圆点  */

.dots {
  width: 350rpx;
  height: 5rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 50%;
  margin-left: -175rpx;
  bottom: 30rpx;
  justify-content: center;
  align-items: center;
}

/*未选中时的小圆点样式 */

.dot {
  /* width: 100rpx;   */
  flex: 1;
  height: 5rpx;
  margin-right: 26rpx;
  background-color: white;
}

/*选中以后的小圆点样式  */

.active {
  /* width: 100rpx;    */
  flex: 1;
  height: 5rpx;
  background-color: coral;
}

.bottomBox {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.contactBt,.shareBt {
  display: flex;
  align-items: center;
  background: #fff;
  height: 80rpx;
  width: 18%;
  border-radius: 0;
  padding: 0;
  margin: 0;
  border: 0;
  line-height: 35rpx;
  padding-top: 10rpx;
}

.bottomBox .bt {
  width: 64%;
  height: 80rpx;
  background: #FF902E;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 0;
  padding: 0;
  margin: 0;
}


.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item .icon {
  width: 35rpx;
  height: 35rpx;
}

.item .text {
  font-size: 20rpx;
  color: #666;
  margin-top: 5rpx;
}

.item1 {
  margin-left: 40rpx;
}

.item2 {
  margin-left: 30rpx;
}




button::after {
  border: none;
}

/* 富文本 */

.richContent {
  margin-top: 2rpx;
  background-color: white;
  width: 100%;
  height: auto;
  margin-bottom: 80rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 15px 0;
}

.richContent .detailtitle {
  font-size: 35rpx;
  color: rgb(221, 183, 183);
  margin-top: 20rpx;
  padding-left: 10rpx;
}

.blank {
  width: 100%;
  height: 20rpx;
}

.page-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: white;
}

.act-body {
  color: #676767;
  font-size: 30rpx;
}

.act-body image {
  max-width: 100%;
}

.intro {
  font-size: 32rpx;
  line-height: 42rpx;
}

.box-cont {
  margin-bottom: 100rpx;
}
