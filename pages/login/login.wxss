/* pages/login/login.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: #fff;
}

.mainpage {
  flex: 1;
}

.topview {
  display: flex;
  align-items: center;
  width: 100%;
  flex-direction: column;
}

/* 顶部背景图 */
.banner{
  width: 100%;
}

/* 顶部logo */
.banner-logo {
  width: 300rpx;
  margin-top: -250rpx;
}

.middleview{
  display: flex;
  align-items: center;
  width: 100%;
  flex-direction: column;
  margin-top: 15%;
}

/* 中间登录注册 */
.middleContent {
  width: 584rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 48rpx rgba(5, 5, 5,0.1);
  z-index: 2;
}
.tabLeft,.tabRight {
  border-bottom: transparent 2px solid;

}
.middleTab{
  display: flex;
  color: #1d1d1d;
  font-size: 36rpx;
  justify-content: space-around;
}

.inputBox {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}

.inputRow {
  width: 90%;
  margin: 70rpx auto 0;
  display: flex;
  align-items: center;
  border-bottom: 1px dashed #d6d6d6;
  justify-content: space-between;
  padding: 32rpx 0;
}

.inputRow:nth-child(2){
  margin-top: 10rpx;
}

.getMobile {
  white-space: nowrap;
  font-size: 28rpx;
}
.inputRow input {
  width: 70%;
  height: 100%;
}
.rowinput2 {
  height: 100%;
  font-size: 28rpx;
  color: #999;
}
.yzm {
  font-size: 28rpx;
  color: #999;
  margin-left: -20rpx;
  white-space: nowrap;
}
.sendCode {
  color: #A7A7A7;
  font-size: 28rpx;
}
.timing {
  color: red;
  font-size: 25rpx;
}
.placeholder {
  color: #616161;
  font-size: 28rpx;
}
.phoneBtn {
  background: #fff;
  font-size: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0;
  margin: 0;
  color: #A7A7A7;
}
.phoneBtn::after {
  border: 0;
}

.tabContent .inputBoxReg {
  width: 100%;
  height: 289rpx;
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}
.inputRowReg {
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  border-bottom: 1px dashed #d6d6d6;
  justify-content: space-between;
  padding: 20rpx 0;
  position: relative;
}

/* 登录方式 */
.loginWay {
  width:90%;
  margin: 28rpx auto;
  display: flex;
  justify-content: space-between;
}
.loginWay .message {
  display: flex;
  align-items: center;
}
.message .message-icon{
  width: 30rpx;
  height: 30rpx;
}
.loginWay .text{
  color: #B3B3B3;
  font-size: 28rpx;
}
.loginWay .forget {
  text-decoration: underline;
  color: #FF902E;  
}

.registview {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}

.loginBt{
  width: 80%;
  height: 76rpx;
  margin-bottom: 30rpx;
  align-self: center;
  text-align: center;
  margin-top: 60rpx;
  background-color: #FF902E;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  /* box-shadow: 1px 1px 1px 1px #eee; */
  border: 0;
}
.registerBt{
  width: 80%;
  height: 76rpx;
  margin-bottom: 30rpx;
  align-self: center;
  text-align: center;
  margin-top: 60rpx;
  background-color: #fff;
  color: #FF902E;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  /* box-shadow: 1px 1px 1px 1px #eee; */
  border: 1px solid #FF902E;
  outline: 0;
}
.loginBt::after {
  border: 0;
  outline: 0;
}


.wxlogin {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
}
.wxloginBt::after {
  border: 0;
}
.wxlogin-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
}
.wxLoginLTL {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wxlogin-text{
  font-size: 26rpx;
  background: #fff;
  color: #A0A0A0;
  padding: 0 10rpx;
}
.wxlogin-line {
  width: 176rpx;
  height: 1px;
  background: #999;
  opacity: 0.2;
}

.wxloginBt {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  border: 0 !important;
  padding: 0;
  overflow: visible;
}


.bottomBox{
  width: 100%;
  flex: 2;
}

/* 服务条款 */
.rules {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 150rpx;
}
.rules .rules-text{
  margin-left: 10rpx;
  color: #444;
  font-size: 30rpx;
}

.rules .rules-text2 {
  margin-left: 10rpx;
  color: #FF902EFF;
  font-size: 32rpx;
}

.rulesCircle {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #FF902EFF;
  border-radius: 50%;
}


/* tab切换样式 */
.tabClass{
  border-bottom: #F19642 2px solid;
}

.rulestyle {
  width: 40rpx;
  height: 40rpx;
}