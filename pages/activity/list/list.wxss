/* pages/activity/activity.wxss */


/* 活动详情-公共结构 */
.activity-wrap{
  width: 100%;
  height: 100%;
  background: #fff;
}
.activity{
  width: 100%;
  display: flex;
  padding: 31rpx 30rpx 32rpx 32rpx;
  background-color: white;
}
.activity .img{
  width: 180rpx;
  height: 180rpx; 
  border-radius: 8rpx;
}
.activity .intro{
  width: 484rpx;
  margin-left: 24rpx;
  font-size: 24rpx;
}
.activity .l1{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #222;
}
.activity .l1 .distance{
  font-size: 24rpx;
  color: #999;
}
.activity .l2{
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.activity .l2 image{
  width: 27rpx;
  height: 27rpx;
  display: inline-block;
}
.activity .l2 text:nth-of-type(1),text:nth-of-type(2){
  margin-left: 12rpx;
}
.activity .l2 text:nth-of-type(3),text:nth-of-type(4){
  margin-left: 6rpx;
}
.activity .l3{
  margin-top: 9rpx;
  margin-bottom: 15rpx;
  display: flex;
}
.activity .l3 view{
  padding-right: 17rpx; 
  padding-left: 17rpx;
  border-right: 1px solid #DDD;
}
.activity .l3 view:first-child{
  padding-left: 0;
}
.activity .l3 view:last-child{
  border: none;
}
.activity .l4{
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.activity .l4 .people-num{
  font-size: 32rpx;
  color: #28B973;
  margin-left: 15rpx;
  margin-right: 33rpx;
}
.activity .l4 .deadline{
  display: flex;
  align-items: center;
}
.activity .l4 .day-num{
  font-size: 32rpx;
  color: #FF734B;
  margin-left: 15rpx;
  margin-right: 10rpx;
}
.activity .l4 .deadline-end{
  width: 121rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: #ccc;
  border-radius: 18rpx;
}
.empty{
display:block;
padding-top:100rpx;
text-align:center;
}
/* 活动详情-公共结构 */