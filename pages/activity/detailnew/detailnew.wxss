}

.bodystyle {
  position: absolute;
  top: 200rpx;
  width: 100%;
  min-height: 400rpx;
  background-color: white;
  opacity: 1;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  z-index: 9;
}

.body-topspace {
  height: 120rpx;
}

.body-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 15rpx;
}

.body-item-l-age {
  color: #333;
  font-weight: bold;
}

/* bottom */

.bottomBox {
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx 5%;
  z-index: 999;
}

.contactBt, .shareBt {
  justify-content: center;
  background: #fff;
  width: 10%;
  display: flex;
  align-items: center;
  background: #fff;
  height: 80rpx;
  border-radius: 0;
  padding: 0;
  margin: 0;
  overflow: hidden;
  border: none;
  line-height: 35rpx;
  padding-top: 10rpx;
}

button::after {
  border: none;
}

.bottomBox .bt {
  width: 76%;
  height: 80rpx;
  border-radius: 40rpx;
  background: #ff902e;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 0;
  margin: 0;
}

.bottomBox .btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 76%;
  background: #fff;
  padding: 0;
  margin: 0;
}

.btnsleft {
  flex: 1;
  height: 80rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  background-color: #FFA500;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.btnsright{
  flex: 1;
  height: 80rpx;
  background: #ff902e;
  color: #fff;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}

.item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.item .icon {
  width: 40rpx;
  height: 40rpx;
}

.item .text {
  font-size: 20rpx;
  color: #666;
  margin-top: 5rpx;
}

.body-item-l {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}

.body-item-li {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.body-item-li image {
  width: 100%
}

.body-item-l-add {
  /* width: 260rpx; */
  width: 410rpx;
}

.body-item-li-ad {
  width: 30rpx;
  height: 36rpx;
  overflow: hidden;
  align-self: flex-start;
  margin-right: 20rpx;
}
.body-item-li-ad image {
  width: 100%;
}

.body-item-nav {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.body-item-r {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body-space-line {
  margin-left: 15rpx;
  margin-right: 15rpx;
  height: 1rpx;
  background-color: #eee;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.body-detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 30rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  margin-bottom: 150rpx;
}

.body-item-nav-img {
  width: 50rpx;
  height: 50rpx;
}

.choice {
  width: 550rpx;
  height: 300rpx;
  background: #fff;
  position: absolute;
  bottom: 0rpx;
  right: 100rpx;
  left: 100rpx;
  z-index: 999;
  border-radius: 20rpx;
  box-shadow: 2px 2px #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.choice-item {
  width: 80%;
  display: flex;
  margin: 20rpx 20rpx;
  /* justify-content: space-around; */
}
.choice-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #999;
}
.choice-name {
  margin-left: 30rpx;
}
.choice-sure {
  font-size: 30rpx;
  color: #f08300;
}

.moredetail{
  width: 300rpx;
  height: 60rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f08200;
  color: white;
  margin-bottom: 150rpx;
  border-radius: 30rpx;
}

.empty {
  height: 250rpx;
  width: 1rpx;
}