  align-items: flex-end;
}

.ti-r-bo-1 {
  color: #f08200;
  font-size: 40rpx;
}

.ti-r-bo-r {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin-right: 20rpx;
  flex-direction: column;
